{
  "compilerOptions": {
    /* Project Options */
    "target": "ES6",
    "module": "CommonJS",
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@systems/*": ["systems/*"],
      "@themes/*": ["themes/*"],
      "@utils/*": ["utils/*"]
    },
    "esModuleInterop": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
